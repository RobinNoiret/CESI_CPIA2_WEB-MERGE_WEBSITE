<div class="login-div">
        <h1 class="login-text">Connexion</h1>
        <form class="login-form">
            <fieldset class="fieldset-group">
                <div class="form-group">
                    <label for="identifiant" class="form-label-usr">Identifiant</label>
                    <input type="text" class="form-field-usr" placeholder="email@example.com" id="identifiant" name="identifiant" required>
                </div>
                <div class="form-group">
                    <label for="mot-de-passe" class="form-label-pwd">Mot de passe</label>
                    <input type="password" class="form-field-pwd" placeholder="password" id="mot-de-passe" name="mot-de-passe" required>
                </div>
                <input type="submit" class="CTA-button" value="Login">
            </fieldset>
        </form>
    </div>